{
  "name": "multisig-coordination-server",
  "version": "0.1.2",
  "description": "Multisig Coordination API server specification implementation",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig-dist.json",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "generate-types": "dtsgen --out ./src/types/mcs.d.ts ./src/server/openApi.json && prettier --write ./src/types/mcs.d.ts",
    "dev": "ts-node-dev --respawn --transpileOnly -r dotenv/config --watch ./src ./src/server/index.ts",
    "lint": "eslint \"./test/**/*.ts\" \"./src/**/*.ts\"",
    "services:up": "docker-compose up --build",
    "services:down": "docker-compose down",
    "prune-db": "ts-node --transpile-only -r dotenv/config ./src/server/db/prune.ts",
    "db-migrate": "sequelize-cli db:migrate"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/input-output-hk/multisig-coordination-server.git"
  },
  "keywords": [],
  "author": "IOHK",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/input-output-hk/multisig-coordination-server/issues"
  },
  "homepage": "https://github.com/input-output-hk/multisig-coordination-server#readme",
  "devDependencies": {
    "@atixlabs/eslint-config": "1.2.3",
    "@types/dockerode": "2.5.34",
    "@types/jest": "26.0.3",
    "@types/node": "14.0.14",
    "@types/node-cron": "^2.0.3",
    "@types/pg": "7.14.4",
    "@types/pino": "6.3.0",
    "@types/sequelize": "4.28.9",
    "@types/socket.io": "2.1.12",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "3.5.0",
    "@typescript-eslint/parser": "3.5.0",
    "dockerode": "3.2.0",
    "dockerode-utils": "0.0.7",
    "dtsgenerator": "3.1.1",
    "eslint": "6.7.2",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-sonarjs": "0.5.0",
    "eslint-plugin-unicorn": "14.0.1",
    "http-status-codes": "1.4.0",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.11",
    "pg-connection-string": "2.3.0",
    "pg-hstore": "2.3.3",
    "prettier": "1.19.1",
    "sequelize-cli": "^6.2.0",
    "socket.io-client": "^3.0.4",
    "ts-jest": "26.1.1",
    "ts-node-dev": "1.0.0-pre.50",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "dotenv": "8.2.0",
    "envalid": "6.0.2",
    "fastify": "2.15.1",
    "fastify-blipp": "2.3.1",
    "fastify-metrics": "5.0.1",
    "fastify-openapi-glue": "1.6.0",
    "moment": "2.27.0",
    "node-cron": "2.0.3",
    "pg": "8.3.0",
    "sequelize": "6.3.5",
    "socket.io": "3.0.4",
    "uuid": "8.3.1"
  },
  "resolutions": {
    "typescript": "3.9.5"
  }
}
